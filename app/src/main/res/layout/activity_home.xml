<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Scrollable content above bottom nav -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Professional Header Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_header"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AgriZone"
                    android:textColor="@color/text_white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Farming Solutions"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:alpha="0.9" />
            </LinearLayout>
            <!-- Divider for professional look -->
            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="@color/button_green"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Professional Feature Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Features"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="8dp">

                    <!-- Expert Support Image -->
                    <ImageView
                        android:id="@+id/ivExpertSupport"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/expert_card" />

                    <!-- Smart Data System Image -->
                    <ImageView
                        android:id="@+id/ivSmartDataSystem"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/smart_card" />

                    <!-- Disease Map Image -->
                    <ImageView
                        android:id="@+id/ivDiseaseMap"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/map" />

                    <!-- Farming Calendar Image -->
                    <ImageView
                        android:id="@+id/ivFarmingCalendar"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/farming" />

                    <!-- Labor Management Image -->
                    <ImageView
                        android:id="@+id/ivLaborManagement"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/labor" />

                    <!-- Community Image -->
                    <ImageView
                        android:id="@+id/ivCommunity"
                        android:layout_width="0dp"
                        android:layout_height="240dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/community" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Professional Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/input_background"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Home Navigation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nav_home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home_selected"
                    android:tint="@color/button_green"
                    android:contentDescription="Home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:textColor="@color/button_green"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Training Navigation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivTraining"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_training"
                    android:tint="@color/gray"
                    android:contentDescription="Training" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Market Navigation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nav_market"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_market"
                    android:tint="@color/gray"
                    android:contentDescription="Market" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Profile Navigation -->
            <LinearLayout
                android:id="@+id/nav_profile_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/nav_profile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/gray"
                    android:contentDescription="Profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating Sensor Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ivSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bottomNavigation"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_menu_compass"
        android:contentDescription="Sensor Data"
        app:tint="@color/text_white"
        app:backgroundTint="@color/button_green" />
</RelativeLayout>
