<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/divider">

    <!-- Professional Header with Gradient Effect -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@color/primary_color"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:tint="@color/text_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👤 My Profile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/dark_background"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your account information"
                android:textSize="14sp"
                android:textColor="@color/hint_text"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Enhanced Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/dark_background"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <!-- Professional Profile Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="8dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/profile_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:background="@color/card_background"
                            android:padding="24dp"
                            android:tint="@color/button_green"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <!-- Enhanced Name Display -->
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="6dp" />

                    <!-- Professional Username -->
                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@username"
                        android:textSize="18sp"
                        android:textColor="@color/hint_text"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="16dp" />

                    <!-- Enhanced User Type Badge -->
                    <TextView
                        android:id="@+id/profile_user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer"
                        android:textSize="16sp"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:background="@color/button_green"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginBottom="12dp"
                        android:drawableStart="@android:drawable/ic_menu_myplaces"
                        android:drawableTint="@color/text_white"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <!-- Professional ID Badge -->
                    <TextView
                        android:id="@+id/profile_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 1"
                        android:textSize="16sp"
                        android:textColor="@color/hint_text"
                        android:background="@color/gray"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginBottom="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Contact Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/dark_background"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📞 Contact Information"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:layout_marginBottom="20dp" />

                    <!-- Professional Email Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textSize="14sp"
                            android:textColor="@color/hint_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/profile_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user@email.com"
                            android:textSize="18sp"
                            android:textColor="@color/text_white" />

                    </LinearLayout>

                    <!-- Professional Phone Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="14sp"
                            android:textColor="@color/hint_text"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/profile_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1234567890"
                            android:textSize="18sp"
                            android:textColor="@color/text_white" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Professional Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/profile_edit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="✏️ Edit Profile"
                    android:textColor="@color/text_white"
                    android:backgroundTint="@color/button_green"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="8dp" />

                <Button
                    android:id="@+id/profile_settings_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="⚙️ Account Settings"
                    android:textColor="@color/text_white"
                    android:backgroundTint="@color/hint_text"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="8dp" />

                <Button
                    android:id="@+id/profile_logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="🚪 Sign Out"
                    android:textColor="@color/text_white"
                    android:backgroundTint="@color/button_red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:elevation="8dp" />

            </LinearLayout>

            <!-- Extra spacing at bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
