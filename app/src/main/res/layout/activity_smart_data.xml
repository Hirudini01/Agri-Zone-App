                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
